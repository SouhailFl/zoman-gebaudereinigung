---
import Layout from '../../layouts/Layout.astro';
import ContactForm from '../../components/ContactForm.astro';

const currentLang = 'en';
---

<Layout 
  title="Contact - Zoman Building Cleaning"
  description="Contact Zoman Building Cleaning in Krefeld. Phone, email, or contact form - we're here for you."
  lang={currentLang}
>
  <!-- Page Header -->
  <section class="bg-zoman-navy text-white py-12">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-4">Contact</h1>
      <p class="text-xl text-gray-200">We look forward to hearing from you</p>
    </div>
  </section>

  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
        
        <!-- Contact Information -->
        <div>
          <h2 class="text-2xl font-bold mb-6 text-zoman-navy">Contact Information</h2>
          
          <div class="space-y-6 mb-8">
            <div class="flex items-start gap-4">
              <div class="text-2xl">📍</div>
              <div>
                <h3 class="font-semibold mb-1">Address</h3>
                <p class="text-gray-700">
                  Zoman Building Cleaning<br />
                  Krefeld, Germany
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="text-2xl">📞</div>
              <div>
                <h3 class="font-semibold mb-1">Phone</h3>
                <a href="tel:+491234567890" class="text-zoman-cyan hover:underline">
                  +49 123 456 7890
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="text-2xl">✉️</div>
              <div>
                <h3 class="font-semibold mb-1">Email</h3>
                <a href="info@zoman-gebaudereinigung.de" class="text-zoman-cyan hover:underline">
                  info@zoman-gebaudereinigung.de
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="text-2xl">🕐</div>
              <div>
                <h3 class="font-semibold mb-1">Opening Hours</h3>
                <p class="text-gray-700">
                  Monday - Friday: 8:00 AM - 6:00 PM<br />
                  Saturday: 9:00 AM - 2:00 PM<br />
                  Sunday: Closed
                </p>
              </div>
            </div>
          </div>

          <!-- Google Maps Embed -->
          <div class="rounded-lg overflow-hidden shadow-lg">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2486.7849674886984!2d6.565296!3d51.336389!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47b8a7e8e8e8e8e8%3A0x0!2sKrefeld!5e0!3m2!1sen!2sen!4v1234567890"
              width="100%" 
              height="300" 
              style="border:0;" 
              allowfullscreen="" 
              loading="lazy"
              title="Zoman Building Cleaning Location in Krefeld"
            ></iframe>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-bold mb-6 text-zoman-navy">Send Us a Message</h2>
          <ContactForm lang={currentLang} />
        </div>

      </div>
    </div>
  </section>

  <!-- Info Box -->
  <section class="bg-gray-50 py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-2xl font-bold mb-4 text-zoman-navy">Fast Response Times</h2>
        <p class="text-gray-700 text-lg">
          We strive to respond to all inquiries within 24 hours. 
          For urgent requests, please call us directly.
        </p>
      </div>
    </div>
  </section>
</Layout>