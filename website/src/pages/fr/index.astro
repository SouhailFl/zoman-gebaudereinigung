---
import Layout from '../../layouts/Layout.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import { translations } from '../../content/translations.js';

const t = translations.fr;
const currentLang = 'fr';
---

<Layout 
  title="Zoman Nettoyage de Bâtiments - Services de Nettoyage Professionnels à Krefeld"
  description="Nettoyage professionnel de bâtiments, de vitres et de panneaux solaires à Krefeld et ses environs. Fiable, minutieux et ponctuel."
  lang={currentLang}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-zoman-navy to-zoman-cyan text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl">
        <h1 class="text-5xl font-bold mb-6">
          Zoman Nettoyage de Bâtiments
        </h1>
        <p class="text-xl mb-8 text-gray-100">
          Services de nettoyage professionnels pour votre maison et votre entreprise à Krefeld
        </p>
        <div class="flex gap-4 flex-wrap">
          <a 
            href="/fr/services" 
            class="bg-white text-zoman-navy px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition"
          >
            Nos services
          </a>
          <a 
            href="/fr/contact" 
            class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-zoman-navy transition"
          >
            Nous contacter
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-zoman-navy">
        Nos services
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        <ServiceCard 
          title="Nettoyage de maison"
          description="Nettoyage complet de votre maison ou appartement, de la cuisine à la salle de bain."
          icon="🏠"
          link="/fr/services#nettoyage-maison"
          learnMore="En savoir plus"
        />
        <ServiceCard 
          title="Nettoyage de vitres"
          description="Nettoyage de vitres sans traces pour les particuliers et les entreprises, intérieur et extérieur."
          icon="🪟"
          link="/fr/services#nettoyage-vitres"
          learnMore="En savoir plus"
        />
        <ServiceCard 
          title="Nettoyage de panneaux solaires"
          description="Nettoyage professionnel de vos panneaux solaires pour une efficacité énergétique maximale."
          icon="☀️"
          link="/fr/services#nettoyage-solaire"
          learnMore="En savoir plus"
        />
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-zoman-navy">
        Pourquoi choisir Zoman ?
      </h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="text-4xl mb-4">✅</div>
          <h3 class="font-semibold mb-2">Fiabilité</h3>
          <p class="text-gray-600">Ponctuel et respectueux des délais</p>
        </div>
        <div class="text-center">
          <div class="text-4xl mb-4">💎</div>
          <h3 class="font-semibold mb-2">Qualité</h3>
          <p class="text-gray-600">Normes professionnelles</p>
        </div>
        <div class="text-center">
          <div class="text-4xl mb-4">🌱</div>
          <h3 class="font-semibold mb-2">Écologique</h3>
          <p class="text-gray-600">Produits de nettoyage respectueux de l'environnement</p>
        </div>
        <div class="text-center">
          <div class="text-4xl mb-4">💰</div>
          <h3 class="font-semibold mb-2">Équitable</h3>
          <p class="text-gray-600">Tarifs transparents</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-zoman-cyan text-white py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">
        Prêt pour un environnement propre ?
      </h2>
      <p class="text-xl mb-8">
        Contactez-nous dès aujourd'hui pour une offre sans engagement
      </p>
      <a 
        href="/fr/contact" 
        class="inline-block bg-white text-zoman-cyan px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition"
      >
        Demander un devis maintenant
      </a>
    </div>
  </section>
</Layout>