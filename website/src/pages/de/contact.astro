---
import Layout from '../../layouts/Layout.astro';
import ContactForm from '../../components/ContactForm.astro';

const currentLang = 'de';
---

<Layout 
  title="Kontakt - Zoman Gebäudereinigung"
  description="Kontaktieren Sie Zoman Gebäudereinigung in Krefeld. Telefon, E-Mail oder Kontaktformular - wir sind für Sie da."
  lang={currentLang}
>
  <!-- Page Header -->
  <section class="bg-zoman-navy text-white py-12">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-4">Kontakt</h1>
      <p class="text-xl text-gray-200">Wir freuen uns auf Ihre Nachricht</p>
    </div>
  </section>

  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
        
        <!-- Contact Information -->
        <div>
          <h2 class="text-2xl font-bold mb-6 text-zoman-navy">Kontaktinformationen</h2>
          
          <div class="space-y-6 mb-8">
            <div class="flex items-start gap-4">
              <div class="text-2xl">📍</div>
              <div>
                <h3 class="font-semibold mb-1">Adresse</h3>
                <p class="text-gray-700">
                  Zoman Gebäudereinigung<br />
                  Krefeld, Deutschland
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="text-2xl">📞</div>
              <div>
                <h3 class="font-semibold mb-1">Telefon</h3>
                <a href="tel:+491234567890" class="text-zoman-cyan hover:underline">
                  +49 174 9383900
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="text-2xl">✉️</div>
              <div>
                <h3 class="font-semibold mb-1">E-Mail</h3>
                <a href="mailto:info@zoman-gebaudereinigung.de" class="text-zoman-cyan hover:underline">
                  info@zoman-gebaudereinigung.de
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="text-2xl">🕐</div>
              <div>
                <h3 class="font-semibold mb-1">Öffnungszeiten</h3>
                <p class="text-gray-700">
                  Montag - Freitag: 8:00 - 18:00<br />
                  Samstag: 9:00 - 14:00<br />
                  Sonntag: Geschlossen
                </p>
              </div>
            </div>
          </div>

          <!-- Google Maps Embed -->
          <div class="rounded-lg overflow-hidden shadow-lg">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2492.896027073342!2d6.559407315707013!3d51.33529717960624!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47b8a5531aefacb7%3A0x87b1ef00dbf461ed!2sOststra%C3%9Fe%202%2F2%2C%2047798%20Krefeld%2C%20Germany!5e0!3m2!1sen!2sus!4v1634567890123!5m2!1sen!2sus"
              width="100%" 
              height="300" 
              style="border:0;" 
              allowfullscreen="" 
              loading="lazy"
              title="Zoman Gebäudereinigung Standort in Krefeld"
            ></iframe>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-bold mb-6 text-zoman-navy">Senden Sie uns eine Nachricht</h2>
          <ContactForm lang={currentLang} />
        </div>

      </div>
    </div>
  </section>

  <!-- Info Box -->
  <section class="bg-gray-50 py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-2xl font-bold mb-4 text-zoman-navy">Schnelle Antwortzeiten</h2>
        <p class="text-gray-700 text-lg">
          Wir bemühen uns, alle Anfragen innerhalb von 24 Stunden zu beantworten. 
          Für dringende Anliegen rufen Sie uns bitte direkt an.
        </p>
      </div>
    </div>
  </section>
</Layout>